@using MoodScape.Data.Enums
@model MoodScape.Web.ViewModels.MoodVM

@{
    ViewData["Title"] = "🥑 Update Mood 🥑";
}

<h2 class="text-center my-5">Update Mood Entry</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Update" method="post" class="card card-body bg-light shadow p-4 mb-5">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <!-- Mood Level Field -->
                <div class="form-group mb-4">
                    <label asp-for="MoodLevel" class="control-label">Mood Level</label>
                    <select asp-for="MoodLevel" asp-items="Html.GetEnumSelectList<MoodLevel>()" class="form-control">
                        <option value="">-- Select Mood Level --</option>
                    </select>
                    <span asp-validation-for="MoodLevel" class="text-danger"></span>
                </div>

                <!-- Description Field -->
                <div class="form-group mb-4">
                    <label asp-for="Description" class="control-label">Description (Optional)</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe your current mood..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Date and Time Field -->
                <div class="form-group mb-5">
                    <label asp-for="LogDate" class="control-label">Date and Time</label>
                    <input asp-for="LogDate" class="form-control" type="datetime-local" />
                    <span asp-validation-for="LogDate" class="text-danger"></span>
                </div>

                <!-- Action Buttons -->
                <div class="form-group text-center mb-3">
                    <button type="submit" class="btn btn-primary btn-lg">Update Entry</button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
